{
  "tasks": {
    "lint": {},
    "format": {},
    "typecheck": { "dependsOn": ["^build"] },
    "clean": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", ".next/cache/**", "build/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "junit.xml"],
      "cache": true
    },
    "test:coverage": {
      "dependsOn": ["test"],
      "outputs": []
    },
    "start": { "dependsOn": ["build"], "cache": false },
    "dev": { "cache": false, "persistent": true }
  }
}
